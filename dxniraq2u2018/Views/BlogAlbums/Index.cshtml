@model IEnumerable<dxniraq2u2018.Models.BlogAlbum>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
             
                <th>
                    @Html.DisplayNameFor(model => model.ImageThumb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogPost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          
            <td>
               
                <img class="img-rounded" src="@Url.Content("~/" + dxniraq2u2018.Properties.Resources.imgFolder + "/" + item.ImageThumb)" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogPost.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
