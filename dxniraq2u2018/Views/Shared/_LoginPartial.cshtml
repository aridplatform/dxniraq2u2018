@using Microsoft.AspNetCore.Identity
@using dxniraq2u2018.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{ ApplicationUser currentUser = await UserManager.GetUserAsync(User); }


@if (SignInManager.IsSignedIn(User))
{
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="navbar-brand">
        <img src="@Url.Content("~/" + dxniraq2u2018.Properties.Resources.imgFolder + "/" + currentUser.ProfileImage)"
             height="60" width="60" class="img-circle" />
       
    </a>  @*<img src="@Url.Content("~/" + dxniraq2u2018.Properties.Resources.imgFolder + "/" + currentUser.MemberType.Image )" />*@
    <ul class="nav navbar-nav navbar-right">

        <li>

            @*<a asp-controller="Notifications" asp-action="Index">

                @ViewData["TotalNewNotifications"]+
                <span class="glyphicon glyphicon-bell"></span>

            </a>*@
        </li>
        <li>
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">GOOD MORNING @currentUser.EnName  | DXN : @currentUser.DxnId</a>
        </li>
        <li>
            @*<button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>*@

            <button type="submit" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-off"></span>
            </button>
        </li>
    </ul>
</form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}
