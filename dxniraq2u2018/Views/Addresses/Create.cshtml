@model dxniraq2u2018.Models.Address

@{
    ViewData["Title"] = "Create";
}

<h2>اضف عنوان لاتمام عملية الشحن</h2>

@*<h3 align="center" style="color:red;">خدمة التسوق الالكتروني والشحن للمنتجات متاح الان في مدينة بغداد فقط</h3>*@

