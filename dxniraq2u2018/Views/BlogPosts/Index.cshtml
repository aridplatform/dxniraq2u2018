@model IEnumerable<dxniraq2u2018.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<h2>جميع مواضيع المدونة</h2>

<p>
    <a asp-controller="BlogSections" asp-action="Index">اضف موضوع جديد</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagethumb)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BlogCategory)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-rounded" src="@Url.Content("~/" + dxniraq2u2018.Properties.Resources.imgFolder + "/" + item.Imagethumb)" width="50" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.BlogCategory.Name)
                </td>
                <td>
                    <a asp-controller="BlogAlbums" asp-action="Create" asp-route-BlogPostId="@item.Id">البوم الصور</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">تحرير</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
