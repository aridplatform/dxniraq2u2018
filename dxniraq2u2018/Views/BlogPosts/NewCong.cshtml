@model dxniraq2u2018.Models.BlogPost

@{
    ViewData["Title"] = "Create";
}

<h2>اضافة موضوع جديد</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewCong" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Introduction" class="control-label"></label>
                @*<input rows="40" asp-for="Introduction" class="form-control" />*@
                <textarea asp-for="Introduction" class="form-control"></textarea>

              
                @*@Html.EditorFor(x => x.Introduction)*@
                @*@Html.TextAreaFor(model => model.Introduction, new { rows = 10, cols = 50 })*@

                <span asp-validation-for="Introduction" class="text-danger"></span>
            </div>

            <div class="form-group">
                مناسبة التهنئة
                <input asp-for="Body" class="form-control" />
                            </div>
                            <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" name="myfile" id="file" accept=".png,.jpg,.jpeg,.gif,.tif" class="btn btn-default" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                                       <div class="form-group">
                    <input type="submit" value="اضف" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الرجوع</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#file").change(function () {
                if ($("#file").val() != "") {
                    $("#fileinput").prop("value", $("#file").val().split('\\').pop());
                }
            });
        });
    </script>


    <script>
        $(document).ready(function () {
            $("#Filelink").change(function () {
                if ($("#Filelink").val() != "") {
                    $("#fileinput").prop("value", $("#Filelink").val().split('\\').pop());
                }
            });
        });
    </script>

    <script>
        tinymce.init({
            selector: 'textarea',
            directionality: 'rtl',
            //language: 'ar_SA',
            plugins: "link",
            mode: "textareas",

            //plugins: "table,contextmenu,paste,-externalplugin"

        });</script>

}

